---
import Header from "../components/Header.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import LinkSection from "../components/LinkSection.astro";
import Particles from "../components/Particles.astro";
import BasicCard from "../components/BasicCard.astro";
import TerminalText from "../components/TerminalText.astro";
import TechnologiesSection from "../components/TechnologiesSection.astro";
import ProjectsSection from "../components/ProjectsSection.astro";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<Header title={SITE_TITLE} description={SITE_DESCRIPTION} isIndex={true}/>
