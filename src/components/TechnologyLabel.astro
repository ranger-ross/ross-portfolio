---
const { tech } = Astro.props;

const logoSize = 20;
const pointerClass = tech.docs ? "cursor-pointer" : "";
---

<a
    class={`text-2xl mb-3 duration-500 motion-safe:hover:scale-105 ${pointerClass}`}
    href={tech.docs}
    target={"_blank"}
    rel="noreferrer"
>
    {
        tech.logo ? (
            <div class="pr-1 pl-1 inline-block">
                <img
                    src={tech.logo}
                    height={logoSize}
                    width={logoSize}
                    class="rounded"
                    alt={"- "}
                />
            </div>
        ) : (
            <div class="pr-1 pl-1 inline-block w-7">-&nbsp;</div>
        )
    }

    <div class="inline-block text-gray-200 pl-2">
        {tech.name}
    </div>
</a>
