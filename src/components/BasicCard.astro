---
export interface Props {
    growOnHover: boolean;
    extraClasses?: string | null;
}

const { growOnHover = false, extraClasses = null } = Astro.props;

const hoverClass = growOnHover !== false ? "motion-safe:hover:scale-105" : "";
---

<div
    class={`flex flex-col justify-center p-6 duration-500 rounded shadow-xl ${hoverClass} ${
        extraClasses ?? ""
    }`}
>
    <slot />
</div>
